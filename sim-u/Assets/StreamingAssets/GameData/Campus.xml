<CampusData xmlns:x="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Size of the campus terrain -->
  <Terrain>
    <TerrainMaterial>grass-material</TerrainMaterial>
    <SubmaterialEmptyGrassIndex>0</SubmaterialEmptyGrassIndex>
    <SubmaterialInvalidIndex>1</SubmaterialInvalidIndex>
    <SubmaterialPathsIndex>2</SubmaterialPathsIndex>
    <SubmaterialRoadsIndex>8</SubmaterialRoadsIndex>
    <SubmaterialParkingLotsIndex>18</SubmaterialParkingLotsIndex>
    <DefaultGridCountX>32</DefaultGridCountX>
    <DefaultGridCountZ>32</DefaultGridCountZ>
    <DefaultGridCountY>32</DefaultGridCountY>
    <DefaultMaxDepth>6</DefaultMaxDepth>
  </Terrain>

  <Paths>
    <CostPerSquare>24</CostPerSquare>
  </Paths>

  <Roads>
    <CostPerSquare>24</CostPerSquare>
  </Roads>

  <ParkingLots>
    <CostPerSquare>24</CostPerSquare>
  </ParkingLots>

  <SmallClassroomCapacity>25</SmallClassroomCapacity>
  <MediumClassroomCapacity>50</MediumClassroomCapacity>
  <LargeClassroomCapacity>100</LargeClassroomCapacity>
  
  <!-- Registry of buildings that can be built. -->
  <Buildings>
    <Building name="Small Portable">
      <ConstructionCost>30000</ConstructionCost>
      <UtilitiesPerQuarter>200</UtilitiesPerQuarter>
      <SmallClassrooms>1</SmallClassrooms>
      <Icon>portable-small-picture</Icon>
      <Description>This classroom used to be a shipping container. With a new coat of paint and some basic classroom supplies however it is a functional small classroom building.</Description>
      <Model>portable-small</Model>
      <Entry x="1" y="0" rotation="deg0" />
    </Building>

    <Building name="Medium Portable">
      <ConstructionCost>55000</ConstructionCost>
      <UtilitiesPerQuarter>400</UtilitiesPerQuarter>
      <MediumClassrooms>1</MediumClassrooms>
      <Icon>portable-medium-picture</Icon>
      <Description>This classroom used to be multiple shipping containers. With a new coat of paint and some basic classroom supplies however it is a functional  medium classroom building.</Description>
      <Model>portable-medium</Model>
      <Entry x="0" y="0" rotation="deg0" />
      <Entry x="3" y="0" rotation="deg0" />
    </Building>
    
    <Building name="Test Building">
      <ConstructionCost>1000</ConstructionCost>
      <UtilitiesPerQuarter>10</UtilitiesPerQuarter>
      <SmallClassrooms>1</SmallClassrooms>
      <Icon>TestBuildingIcon</Icon>
      <Description>This is the first building added to the game. It has a silly icon and doesn't do anything. It's probably a cube if I'm being honest with myself.</Description>
      <Model>test-building-small</Model>
      <Entry x="0" y="0" rotation="deg90" />
    </Building>
    
    <Building name="Weird Building">
      <ConstructionCost>2000</ConstructionCost>
      <UtilitiesPerQuarter>20</UtilitiesPerQuarter>
      <MediumClassrooms>1</MediumClassrooms>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building has a weird footprint. It's just two buildings diagonally adjacent. Not that weird really.</Description>
      <Model>test-building-weird</Model>
      <Entry x="1" y="1" rotation="deg270" />
    </Building>

    <Building name="Really Weird Building">
      <ConstructionCost>5000</ConstructionCost>
      <UtilitiesPerQuarter>50</UtilitiesPerQuarter>
      <LargeClassrooms>1</LargeClassrooms>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building has a really weird footprint. It's a line of four buildings with a gap in the middle.</Description>
      <Model>test-building-really-weird</Model>
      <Entry x="0" y="2" rotation="deg180" />
    </Building>

    <Building name="Arrow Building">
      <ConstructionCost>20000</ConstructionCost>
      <UtilitiesPerQuarter>300</UtilitiesPerQuarter>
      <Laboratories>2</Laboratories>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building is testing Blender exporting. It should point toward the camera.</Description>
      <Model>test-building-arrow</Model>
      <Entry x="0" y="1" rotation="deg180" />
      <Entry x="1" y="1" rotation="deg180" />
    </Building>

    <Building name="C Block">
      <ConstructionCost>1</ConstructionCost>
      <UtilitiesPerQuarter>1</UtilitiesPerQuarter>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building is testing footprint rotation.</Description>
      <Model>test-c-block</Model>
    </Building>

    <Building name="L Block">
      <ConstructionCost>1</ConstructionCost>
      <UtilitiesPerQuarter>1</UtilitiesPerQuarter>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building is testing footprint rotation.</Description>
      <Model>test-l-block</Model>
    </Building>

    <Building name="Random Block">
      <ConstructionCost>1</ConstructionCost>
      <UtilitiesPerQuarter>1</UtilitiesPerQuarter>
      <Icon>TestBuildingIcon</Icon>
      <Description>This building is testing footprint rotation.</Description>
      <Model>test-random-block</Model>
    </Building>
  </Buildings>
  
</CampusData>